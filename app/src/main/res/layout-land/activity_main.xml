<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_input_numbers"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="5dp"
            android:gravity="end"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_sin"
                style="@style/BtnStyleLand3"
                android:text="sin" />

            <Button
                android:id="@+id/button_cos"
                style="@style/BtnStyleLand3"
                android:text="cos" />

            <Button
                android:id="@+id/button_tan"
                style="@style/BtnStyleLand3"
                android:text="tan" />

            <Button
                android:id="@+id/button_ctg"
                style="@style/BtnStyleLand3"
                android:text="cot" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_ln"
                style="@style/BtnStyleLand3"
                android:text="ln"/>

            <Button
                android:id="@+id/button_pi"
                style="@style/BtnStyleLand3"
                android:text="π" />

            <Button
                android:id="@+id/button_euler"
                style="@style/BtnStyleLand3"
                android:text="e" />

            <Button
                android:id="@+id/button_percent"
                style="@style/BtnStyleLand3"
                android:text="\u0025" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_log10"
                style="@style/BtnStyleLand3"
                android:text="lg" />

            <Button
                android:id="@+id/button_sqrt"
                style="@style/BtnStyleLand3"
                android:text="√x"/>

            <Button
                android:id="@+id/button_power"
                style="@style/BtnStyleLand3"
                android:text="x^y"
                />

            <Button
                android:id="@+id/button_factorial"
                style="@style/BtnStyleLand3"
                android:text="x!" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_exponentiation"
                style="@style/BtnStyleLand3"
                android:text="EXP" />

            <Button
                android:id="@+id/button_rad"
                style="@style/BtnStyleLand3"
                android:text="RAD" />

            <Button
                android:id="@+id/button_inverse"
                style="@style/BtnStyleLand3"
                android:text="1/x" />

            <Button
                android:id="@+id/button_abs"
                style="@style/BtnStyleLand3"
                android:text="|x|" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_seven"
                style="@style/BtnStyleLand1"
                android:text="7"
                />

            <Button
                android:id="@+id/button_four"
                style="@style/BtnStyleLand1"
                android:text="4" />

            <Button
                android:id="@+id/button_one"
                style="@style/BtnStyleLand1"
                android:text="1"/>

            <Button
                android:id="@+id/button_dot"
                style="@style/BtnStyleLand1"
                android:text="." />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_eight"
                style="@style/BtnStyleLand1"
                android:text="8" />

            <Button
                android:id="@+id/button_five"
                style="@style/BtnStyleLand1"
                android:text="5" />

            <Button
                android:id="@+id/button_two"
                style="@style/BtnStyleLand1"
                android:text="2" />

            <Button
                android:id="@+id/button_zero"
                style="@style/BtnStyleLand1"
                android:text="0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_nine"
                style="@style/BtnStyleLand1"
                android:text="9" />

            <Button
                android:id="@+id/button_six"
                style="@style/BtnStyleLand1"
                android:text="6" />

            <Button
                android:id="@+id/button_three"
                style="@style/BtnStyleLand1"
                android:text="3" />

            <Button
                android:id="@+id/button_brackets"
                style="@style/BtnStyleLand1"
                android:text="( )"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_division"
                style="@style/BtnStyleLand2"
                android:text="\u00F7" />

            <Button
                android:id="@+id/button_multiplication"
                style="@style/BtnStyleLand2"
                android:text="×" />

            <Button
                android:id="@+id/button_subtraction"
                style="@style/BtnStyleLand2"
                android:text="-" />

            <Button
                android:id="@+id/button_addition"
                style="@style/BtnStyleLand2"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_clear"
                style="@style/BtnStyleLand2"
                android:text="C"/>

            <Button
                android:id="@+id/button_clear_entry"
                style="@style/BtnStyleLand2"
                android:text="CE" />

            <Button
                android:id="@+id/button_negativeNumber"
                style="@style/BtnStyleLand2"
                android:text="\u00B1" />

            <Button
                android:id="@+id/button_equal"
                style="@style/BtnStyleLand2"
                android:text="=" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>